{
  "protocol": "http://recipient-update-protocol.xyz",
  "published": true,
  "types": {
    "post": {},
    "comment": {}
  },
  "structure": {
    "post": {
      "$actions": [
        {
          "who": "anyone",
          "can": "write"
        }
      ],
      "comment": {
        "$actions": [
          {
            "who": "author",
            "of": "post",
            "can": "update"
          }
        ]
      }
    }
  }
}
